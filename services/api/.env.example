# ============================================
# AprendeAI API Configuration
# Copy this file to .env for local development
# ============================================

# --------------------------------------------
# Core Application
# --------------------------------------------
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aprendeai?schema=public"

# --------------------------------------------
# Authentication (JWT)
# --------------------------------------------
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="change-this-to-a-secure-random-string"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# --------------------------------------------
# AI Services
# --------------------------------------------
# OpenAI
OPENAI_API_KEY="sk-your-openai-key-here"
OPENAI_ORG_ID="org-your-org-id"

# Google Gemini
GOOGLE_API_KEY="AIza-your-google-key-here"

# Anthropic (Optional)
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# AI Service Security (HMAC)
# Secret shared between NestJS and Python AI Service
AI_SERVICE_SECRET="min-32-char-random-string-for-hmac-signing"
AI_SERVICE_URL="http://localhost:8000"

# --------------------------------------------
# Queue System (RabbitMQ/Redis)
# --------------------------------------------
RABBITMQ_URL="amqp://user:password@localhost:5672"
REDIS_URL="redis://localhost:6379"

# --------------------------------------------
# Object Storage (S3/MinIO)
# --------------------------------------------
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="aprendeai-assets"
AWS_ENDPOINT="http://localhost:9000"

# --------------------------------------------
# Email Service (SMTP)
# --------------------------------------------
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASS="password"
SMTP_FROM="noreply@aprendeai.com"

# --------------------------------------------
# Observability
# --------------------------------------------
# Sentry (Error Tracking)
SENTRY_DSN="https://key@sentry.io/project"

# --------------------------------------------
# Payment (Stripe)
# --------------------------------------------
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
