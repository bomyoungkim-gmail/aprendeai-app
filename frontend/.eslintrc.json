{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["import"],
  "rules": {
    // Phase 3: Error level - strict enforcement
    
    // Discourage wildcard exports (export *)
    "no-restricted-syntax": [
      "error",
      {
        "selector": "ExportAllDeclaration",
        "message": "Wildcard exports (export *) are not allowed. Use explicit named exports instead to prevent naming conflicts and improve tree-shaking."
      }
    ],
    
    // Warn on anonymous default exports
    "import/no-anonymous-default-export": "error",
    
    // Block imports from deprecated barrel file
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./app",
            "from": "./hooks/index.ts",
            "message": "Importing from the deprecated barrel is not allowed. Import hooks directly from their files. Example: '@/hooks/cornell/use-autosave' instead of '@/hooks'"
          },
          {
            "target": "./components",
            "from": "./hooks/index.ts",
            "message": "Importing from the deprecated barrel is not allowed. Import hooks directly from their files. Example: '@/hooks/cornell/use-data' instead of '@/hooks'"
          }
        ]
      }
    ],
    
    // Extended: Prevent barrel exports in components
    "no-restricted-exports": [
      "warn",
      {
        "restrictedNamedExports": ["default"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    }
  }
}
