# Environment Variables Template
# Copy this file to .env.local and configure as needed

# ===========================================
# API Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ===========================================
# Feature Flags (Refactoring)
# ===========================================
# Set to 'true' to enable new architecture features
# Set to 'false' or omit to use legacy code (safe rollback)

# Use new services layer for business logic
# Default: false
NEXT_PUBLIC_USE_SERVICES=false

# Use refactored hooks with services
# Default: false
NEXT_PUBLIC_USE_NEW_HOOKS=false

# Use centralized storage service (SSR-safe)
# Default: false
NEXT_PUBLIC_USE_STORAGE=false

# Use WebSocket singleton service
# Default: false
NEXT_PUBLIC_USE_WS_SERVICE=false

# Use new offline queue service
# Default: false
NEXT_PUBLIC_USE_OFFLINE_QUEUE=false

# ===========================================
# Development
# ===========================================
NODE_ENV=development

# ===========================================
# Testing (E2E)
# ===========================================
# TEST_USER_EMAIL=test@example.com
# TEST_USER_PASSWORD=password123
