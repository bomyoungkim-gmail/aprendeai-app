# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aprendeai
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aprendeai

# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# OpenAI (Premium tier - GPT-4)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo

# Anthropic (Balanced tier - Claude Sonnet)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini (Cheap tier - Flash)
GOOGLE_API_KEY=AIza-your-google-key-here
GEMINI_MODEL=gemini-1.5-flash

# Default provider (openai, anthropic, or gemini)
LLM_PROVIDER=openai

# Tier model overrides (optional)
TIER_PREMIUM_MODEL=gpt-4-turbo
TIER_BALANCED_MODEL=claude-3-sonnet-20240229
TIER_CHEAP_MODEL=gemini-1.5-flash

# JWT Secret
JWT_SECRET=your-secret-key-here

# Storage (if using cloud storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=aprendeai-storage
